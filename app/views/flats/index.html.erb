<h1>Flats</h1>

<div class="container">
  <div class="row">
  <% @flats.each do |flat| %>
    <div class="col-sm-12 col-md-6 col-lg-3">
      <div class="card" style="margin:15px">
        <div class="image" style= "background-image: url(<%= image_tag "flat.png" %>)" ></div>
        <p> <%= link_to flat.name, flat_path(flat) %> </p>
        <p> Address: <%= flat.address %></p>
        <p> <%= flat.description.truncate(20) %></p>
          <div class="d-flex justify-content-between">
            <p> <i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %></p>
            <p> <i class="fas fa-users"></i> <%= flat.number_of_guests  %></p>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
